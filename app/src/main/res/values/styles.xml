<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <!-- allow contextual actionbar to float over the toolbar when visible -->
    <style name="AppTheme.ContextActionBar" parent="AppTheme.NoActionBar">
        <item name="windowActionModeOverlay">true</item>
        <!-- set background color of context action bar -->
        <item name="actionModeBackground">@color/colorAccent</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AudioRecorderTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>


    <!-- Text style -->
    <style name="TextStyle">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextStyle.Title">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextStyle.Description">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextStyle.Title.Note">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="TextStyle.Description.Note">
        <item name="android:textSize">18sp</item>
    </style>
    <!-- END -->


    <!-- button menu style -->
    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
