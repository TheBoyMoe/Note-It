<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:background="@android:color/black"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include layout="@layout/toolbar"/>

    <ImageView
        android:id="@+id/video_note_preview"
        android:layout_below="@id/toolbar"
        android:contentDescription="@string/image_view_description"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="?attr/actionBarSize"/>

    <ImageView
        android:src="@drawable/action_play_video"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:contentDescription="@string/video_thumbnail"
        android:layout_width="60dp"
        android:layout_height="60dp"/>


    <com.getbase.floatingactionbutton.FloatingActionButton
        android:id="@+id/action_info_btn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fab_colorNormal="@color/colorButtonBackground"
        app:fab_colorPressed="@color/colorButtonBackgroundPressed"/>


</RelativeLayout>